@model List<Staff_WebServer.Models.Order>

@{
    ViewData["Title"] = "Мои приказы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Мои приказы</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Приказов пока нет.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Тип приказа</th>
            <th>Текст</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Date.ToShortDateString()</td>
                <td>@order.OrderType?.Name</td>
                <td>@order.Text</td>
            </tr>
        }
        </tbody>
    </table>
}